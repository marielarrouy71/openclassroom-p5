{% extends 'base.html.twig' %} {% block content %}

<h1>Modification des informations de {{ participant.nom }}
</h1>


<form method="post" action="/updateParticipant/{{ participant.id }}?evenementId={{evenementId}}">
    <div class="form-group">
        <label>Prénom</label>
        <input name="prenom" class="form-control" value="{{participant.prenom}}" />
    </div>
    <div class="form-group">
        <label>Nom</label>
        <input name="nom" class="form-control" value="{{participant.nom}}" />
    </div>
    <div class="form-group">
        <label>Date de naissance</label>
        <input name="date_naissance" class="form-control" type="date" value="{{participant.date_naissance}}" />
    </div>
    <div class="form-group">
        <label>Sexe</label>
        <select class="form-control" name="sexe" value="{{participant.sexe}}">
         <option value="1">homme</option>
          <option value="2">femme</option>
     </select>
    </div>
    <div class="form-group">
        <label>Téléphone</label>
        <input name="telephone" class="form-control" value="{{participant.telephone}}" />
    </div>
    <div class="form-group">
        <label>Mail</label>
        <input name="mail" class="form-control" value="{{participant.mail}}" />
    </div>
    <div class="form-group">
        <label>Profession</label>
        <input name="profession" class="form-control" value="{{participant.profession}}" />
    </div>
    <div class="form-group">
        <label>Lieu de travail</label>
        <input name="lieu_travail" class="form-control" value="{{participant.lieu_travail}}" />
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
</form>
{% endblock %}
